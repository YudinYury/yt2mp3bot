{
    "include": ["src", "test", "test.ts", "scripts"],
    "compilerOptions": {
      "noErrorTruncation": true,
      "target": "ES2020",
      "lib": ["ES2020"],
      "outDir": "build",
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "isolatedModules": false,
      "module": "commonjs",
      "allowJs": false,
      "allowSyntheticDefaultImports": false,
      "esModuleInterop": false
    }
}
